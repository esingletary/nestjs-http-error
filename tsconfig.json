{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": true,
      "baseUrl": "./src",
      "outDir": "./dist",
      "lib": [
        "es2017",
        "esnext.asynciterable"
      ]
    },
    "include": [
      "./src"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  